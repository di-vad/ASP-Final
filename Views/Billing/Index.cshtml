@model IEnumerable<vehicleManagementSystem.Models.Billing>
@{
    ViewData["Title"] = "Billing";
}

<h2>Billing Records</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Vehicle</th>
            <th>Reservation Dates</th>
            <th>Total</th>
            <th>Issued</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bill in Model)
        {
            <tr>
                <td>@bill.Reservation?.Customer?.Name</td>
                <td>@bill.Reservation?.Vehicle?.Model</td>
                <td>@bill.Reservation?.StartDate.ToShortDateString() - @bill.Reservation?.EndDate.ToShortDateString()</td>
                <td>@bill.TotalAmount.ToString("C")</td>
                <td>@bill.IssuedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@bill.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
