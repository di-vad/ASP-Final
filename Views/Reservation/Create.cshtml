@model vehicleManagementSystem.Models.Reservation
@{
    ViewData["Title"] = "New Reservation";
}

<h2>Create New Reservation</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Vehicle</label>
        <select asp-for="VehicleId" asp-items="ViewBag.Vehicles" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Customer</label>
        <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Create Reservation</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
