@model IEnumerable<vehicleManagementSystem.Models.Reservation>
@{
    ViewData["Title"] = "Reservations";
}

<h2>Reservations</h2>

<p><a asp-action="Create" class="btn btn-success">Create New Reservation</a></p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Vehicle</th>
            <th>Customer</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Vehicle?.Model</td>
                <td>@r.Customer?.Name</td>
                <td>@r.StartDate.ToShortDateString()</td>
                <td>@r.EndDate.ToShortDateString()</td>
                <td>@r.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
