@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Vehicle Rental System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-light border-end d-flex flex-column justify-content-between" id="sidebar-wrapper" style="min-width: 250px; height: 100vh;">
            <div>
                <div class="sidebar-heading px-3 py-4 fw-bold border-bottom">Vehicle Rental</div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action">Home</a>
                    <a asp-controller="Vehicle" asp-action="Index" class="list-group-item list-group-item-action">Vehicles</a>
                    <a asp-controller="Customer" asp-action="Index" class="list-group-item list-group-item-action">Customers</a>
                    <a asp-controller="Reservation" asp-action="Index" class="list-group-item list-group-item-action">Reservations</a>
                    <a asp-controller="Billing" asp-action="Index" class="list-group-item list-group-item-action">Billing</a>
                    <a asp-controller="Report" asp-action="Index" class="list-group-item list-group-item-action">Reports</a>
                </div>
            </div>

            <div class="list-group list-group-flush mb-3">
                @if (Context.Session.GetString("Username") != null)
                {
                    <div class="px-3 text-muted small mb-1">
                        Logged in as: <strong>@Context.Session.GetString("Username")</strong>
                    </div>
                    <a asp-controller="User" asp-action="Dashboard" class="list-group-item list-group-item-action">Dashboard</a>
                    <a asp-controller="User" asp-action="Logout" class="list-group-item list-group-item-action text-danger">Logout</a>
                }
                else
                {
                    <a asp-controller="User" asp-action="Login" class="list-group-item list-group-item-action">Login</a>
                    <a asp-controller="User" asp-action="Register" class="list-group-item list-group-item-action">Register</a>
                }
            </div>
        </div>

        <div id="page-content-wrapper" class="flex-grow-1 p-4">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
