@model vehicleManagementSystem.Models.Vehicle
@{
    ViewData["Title"] = "Delete Vehicle";
}

<h2>Delete Vehicle</h2>

<div class="alert alert-danger">Are you sure you want to delete this vehicle?</div>

<dl class="row">
    <dt class="col-sm-3">Make</dt>
    <dd class="col-sm-9">@Model.Make</dd>

    <dt class="col-sm-3">Model</dt>
    <dd class="col-sm-9">@Model.Model</dd>

    <dt class="col-sm-3">License Plate</dt>
    <dd class="col-sm-9">@Model.LicensePlate</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
