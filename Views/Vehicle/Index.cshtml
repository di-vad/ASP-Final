@model IEnumerable<vehicleManagementSystem.Models.Vehicle>
@{
    ViewData["Title"] = "Vehicle List";
}

<h2>Fleet Vehicles</h2>

<p><a asp-action="Create" class="btn btn-success">Add New Vehicle</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Type</th>
            <th>License Plate</th>
            <th>Daily Rate</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Make</td>
                <td>@v.Model</td>
                <td>@v.VehicleType</td>
                <td>@v.LicensePlate</td>
                <td>@v.DailyRate.ToString("C")</td>
                <td>@(v.IsAvailable ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@v.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
